<?xml version="1.0"?>
<pfsense>
	<version>21.4</version>
	<system>
		<hostname>pfSense-Test</hostname>
		<domain>localdomain</domain>
	</system>
	<interfaces>
		<wan>
			<enable/>
			<if>em0</if>
			<descr>WAN</descr>
			<ipaddr>dhcp</ipaddr>
		</wan>
		<lan>
			<enable/>
			<if>em1</if>
			<descr>LAN</descr>
			<ipaddr>192.168.1.1</ipaddr>
			<subnet>24</subnet>
		</lan>
		<opt1>
			<enable/>
			<if>em2</if>
			<descr>GUEST</descr>
			<ipaddr>10.0.99.1</ipaddr>
			<subnet>24</subnet>
		</opt1>
	</interfaces>
	<dhcpd>
		<lan>
			<enable/>
			<range>
				<from>192.168.1.100</from>
				<to>192.168.1.200</to>
			</range>
		</lan>
	</dhcpd>
	<filter>
		<rule>
			<type>pass</type>
			<interface>lan</interface>
			<ipprotocol>inet</ipprotocol>
			<source>
				<address>192.168.1.50</address>
			</source>
			<destination>
				<any/>
			</destination>
			<descr><![CDATA[Allow Specific Host]]></descr>
		</rule>
		<rule>
			<type>block</type>
			<interface>wan</interface>
			<ipprotocol>inet</ipprotocol>
			<source>
				<any/>
			</source>
			<destination>
				<network>wanip</network>
				<port>22</port>
			</destination>
			<descr><![CDATA[Block SSH on WAN]]></descr>
		</rule>
	</filter>
	<aliases>
		<alias>
			<name>WebServers</name>
			<type>network</type>
			<address>10.0.0.1 10.0.0.2</address>
			<descr>My Web Servers</descr>
		</alias>
	</aliases>
	<nat>
		<outbound>
			<mode>automatic</mode>
		</outbound>
		<rule>
		    <source>
				<network>lan</network>
			</source>
			<destination>
				<network>wanip</network>
                <port>80</port>
			</destination>
			<target>192.168.1.100</target>
            <local-port>8080</local-port>
			<interface>wan</interface>
			<descr>Port Forward HTTP</descr>
            <associated-rule-id>pass</associated-rule-id>
		</rule>
	</nat>
</pfsense>
